{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  }
}
